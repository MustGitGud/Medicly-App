<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF3636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/bckBtnAllergy"
            android:layout_width="68dp"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:background="#FF3636"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/allergyTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Allergies"
            android:textSize="50sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollCon"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/black_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/linLayAllergy"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"/>
    </ScrollView>

    <ImageButton
        android:id="@+id/addBtnAllergy"
        android:layout_width="316dp"
        android:layout_height="107dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollCon"
        app:layout_constraintStart_toStartOf="@+id/scrollCon"
        app:layout_constraintTop_toBottomOf="@+id/scrollCon"
        app:srcCompat="@drawable/ic_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>