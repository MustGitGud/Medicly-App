<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4D8"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <Button
                    android:id="@+id/backBtnHR"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/ic_back" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_acc"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTextPersonName5"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Age:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTextPersonName7"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text="Sex:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sexSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="440dp"
            android:background="@drawable/roundstyle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/medInfoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sg_bold"
                    android:text="Medical Info"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnAllergy"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FF3636"
                    android:drawableLeft="@drawable/ic_allergy"
                    android:fontFamily="@font/sg_medium"
                    android:paddingLeft="10dp"
                    android:text="Allergies"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:elevation="2dp"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/btnCon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#428AF6"
                    android:drawableLeft="@drawable/ic_dgs"
                    android:fontFamily="@font/sg_medium"
                    android:paddingLeft="10dp"
                    android:text="Diagnosis/Conditions"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnMeds"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#66d453"
                    android:drawableLeft="@drawable/ic_meds"
                    android:fontFamily="@font/sg_medium"
                    android:paddingLeft="10dp"
                    android:text="Medications"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:textSize="38sp" />

                <Button
                    android:id="@+id/btnDoc"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#FAB93C"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_doc"
                    android:fontFamily="@font/sg_medium"
                    android:paddingLeft="10dp"
                    android:text="Doctor's Profile"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:textSize="31sp" />

        </LinearLayout>


</RelativeLayout>

