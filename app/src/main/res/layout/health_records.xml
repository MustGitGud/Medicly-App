<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/dgs"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/allergy"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_dgs" />

        <ImageButton
            android:id="@+id/allergy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_allergy" />

        <ImageButton
            android:id="@+id/meds"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/allergy"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/allergy"
            app:layout_constraintTop_toBottomOf="@+id/allergy"
            app:layout_constraintVertical_bias="0.365"
            app:srcCompat="@drawable/ic_meds" />

        <ImageButton
            android:id="@+id/doc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dgs"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/dgs"
            app:layout_constraintTop_toBottomOf="@+id/dgs"
            app:layout_constraintVertical_bias="0.384"
            app:srcCompat="@drawable/ic_doc" />

        <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="5dp"
            android:layout_marginBottom="368dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/profpic"
            android:layout_width="146dp"
            android:layout_height="131dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_acc" />

        <RelativeLayout
            android:layout_width="184dp"
            android:layout_height="351dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="First Name:" />


                        <EditText
                            android:id="@+id/inputFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="First Name" />

                        <TextView
                            android:id="@+id/txtMiddleName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Middle Name:" />

                        <EditText
                            android:id="@+id/inputMiddleName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Middle Name" />

                        <TextView
                            android:id="@+id/txtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Name:" />

                        <EditText
                            android:id="@+id/inputLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Last Name" />

                        <TextView
                            android:id="@+id/txtBirthDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Birthdate: " />

                        <EditText
                            android:id="@+id/inputBirthDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date"
                            android:text="MM/DD/YYYY" />

                        <TextView
                            android:id="@+id/txtOcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Occupation(Optional)" />

                        <EditText
                            android:id="@+id/inputOcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Occupation" />

                </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="121dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txtAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age: " />

                <EditText
                    android:id="@+id/inputAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sex:" />

                <Spinner
                    android:id="@+id/sexSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="55dp"
            android:layout_height="57dp"
            app:srcCompat="@drawable/ic_back"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>